<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3><%= "Git commit form" %></h3>
    </div>
    <div class="modal-body">
    <div class="errors">
      <ul class="errors"></ul></div>
      <%= form_for :git,url:{action: 'git_commit'},html: {id: 'git_form'} do |f|%>
        <div class="row">
          <div class="col-sm-1"></div>
          <div class="col-sm-10">
            <div id="error-div">
              <label id="error"></label>
            </div>
          </div>
        </div><br/>
        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-4"><b>Git message :</b></div>
          <div class="col-md-7"><%=f.text_field :message,placeholder:"Message",class: "form-control"%></div>
        </div><br/>
        <div class="row">
          <div class="col-md-12">
            <center>
              <%= f.submit 'Git commit', class: "btn btn-success"%>&nbsp;
              <%= link_to 'Cancel', '#', class: "btn btn-default",data:{dismiss:"modal"}%>
            </center>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $("#git_form").validate({
      rules: {
        "git[message]": {
          required: true
        }
      },
      messages: {
        "git[message]": {
          required: "Message is necessary field."
        }
      },
      errorPlacement: function(error, element) {
        error.appendTo( $("#error") );
      }
    });
  });  
</script>

